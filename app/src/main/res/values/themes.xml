<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.kotlin_calculator" parent="Theme.Material3.Dark">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorOnPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="android:statusBarColor">@color/gray75</item>

        <item name="windowActionBar">false</item> <!--Toolbar-->
        <item name="windowNoTitle">true</item> <!--Title app-->
    </style>



    <style name="Theme.kotlin_calculator" parent="Base.Theme.kotlin_calculator" />

    <style name="Theme.kotlin_calculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.kotlin_calculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.kotlin_calculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>