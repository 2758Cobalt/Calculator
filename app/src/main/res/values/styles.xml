<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonFunc">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@color/gray150</item>
        <item name="android:foregroundTint">@color/orange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/orange</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>

        <item name="backgroundTint">@color/gray75</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <!--Converter-->

    <style name="buttonAction">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:foregroundTint">@color/orange</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!--Selector-->
    <style name="buttonTile">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:shadowColor">@color/orange</item>
        <item name="backgroundTint">@color/gray40</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="inputTextToConvert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>

</resources>