<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Calcualtor-->
    <style name="buttonStyleDefault">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:elevation">6dp</item>

        <item name="android:background">@drawable/style_button_functional</item>

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonStyleOperator" parent="buttonStyleDefault">
        <item name="android:background">@drawable/style_button_operator</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="buttonStyleNumber" parent="buttonStyleDefault">
        <item name="android:background">@drawable/style_button_number</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="buttonMenuClickable">
        <item name="backgroundTint">#E1E1E1</item>
        <item name="rippleColor">@color/orange</item>
    </style>

    <!--Selector-->
    <style name="buttonTile">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="buttonConverterReset" parent="buttonStyleNumber">
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonConverterConvert" parent="buttonStyleOperator">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputTextToConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textCursorDrawable">@color/orange</item>
        <item name="android:textColorLink">@color/orange</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@string/tooltip_enterText</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/orange</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="inputFieldToAreaContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/linearlayout_bg_sheet</item>
        <item name="android:backgroundTint">@color/gray120</item>
        <item name="android:elevation">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="displayTextConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/linearlayout_bg_sheet</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tooltipTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/sampleText</item>
    </style>

    <style name="spinnerConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/spinner_bg_sheet</item>

    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange</item>
        <item name="iconTint">@color/bottom_nav_colors</item>
    </style>

</resources>