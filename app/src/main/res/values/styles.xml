<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonFunc">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@color/gray150</item>
        <item name="android:foregroundTint">@color/orange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/orange</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>

        <item name="backgroundTint">@color/gray75</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!--Selector-->
    <style name="buttonTile">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:shadowColor">@color/orange</item>
        <item name="backgroundTint">@color/gray40</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="buttonAction">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>

        <item name="backgroundTint">@color/gray150</item>
        <item name="android:foregroundTint">@color/orange</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>

        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/orange</item>
    </style>

    <style name="buttonActionOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundTint">@color/orange</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="inputTextToConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>

        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textCursorDrawable">@color/orange</item>
        <item name="android:hint">@string/tooltip_enterText</item>

        <item name="android:backgroundTint">@color/orange</item>

        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="displayTextConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:background">@drawable/linearlayout_bg_sheet</item>

        <item name="android:text">|ResultText|</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tooltipTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="maxLines">3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/sampleText</item>
    </style>

    <style name="spinnerConvert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:layout_margin">8dp</item>

        <item name="android:background">@drawable/spinner_bg_sheet</item>

    </style>

</resources>