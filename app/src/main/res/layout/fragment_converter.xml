<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/backToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_32"
            android:contentDescription="@string/buttonPrevious"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/labelConvertor"
            style="@style/displayTextConvert"
            android:layout_width="wrap_content"
            android:text="@string/label_weightText"
            android:textColor="@color/gray120"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tooltipConvertor"
            style="@style/tooltipTextStyle"
            android:layout_gravity="start"
            android:layout_margin="12dp"
            android:text="@string/tooltip_weightText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/firstNumberPicker"
                android:theme="@style/numPicker"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="32dp"
                android:elevation="8dp" />

            <EditText
                android:id="@+id/firstInputField"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                style="@style/inputTextToConvert" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <NumberPicker android:id="@+id/secondNumberPicker"
                android:theme="@style/numPicker"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="32dp"
                android:elevation="8dp" />
            <EditText
                android:id="@+id/secondInputField"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                style="@style/inputTextToConvert" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:elevation="8dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonPreviousConverter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_subdirectory_arrow_left_32"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonPrevious"
                android:layout_margin="12dp" />

            <ImageButton
                android:id="@+id/buttonReset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_playlist_remove_24"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonReset"
                android:layout_margin="12dp" />

            <ImageButton
                android:id="@+id/buttonNextConverter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_right_alt_32"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonNext"
                android:layout_margin="12dp" />
        </LinearLayout>


</LinearLayout>