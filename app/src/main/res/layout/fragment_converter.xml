<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

        <TextView
            android:id="@+id/labelConvertor"
            style="@style/displayTextConvert"
            android:textColor="@color/gray120"
            android:text="@string/label_weightText" />

        <TextView
            android:id="@+id/tooltipConvertor"
            style="@style/tooltipTextStyle"
            android:layout_gravity="start"
            android:layout_margin="12dp"
            android:text="@string/tooltip_weightText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/firstNumberPicker"
                android:theme="@style/numPicker"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="32dp"
                android:elevation="8dp" />

            <EditText
                android:id="@+id/firstInputField"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                style="@style/inputTextToConvert" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <NumberPicker android:id="@+id/secondNumberPicker"
                android:theme="@style/numPicker"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="32dp"
                android:elevation="8dp" />
            <EditText
                android:id="@+id/secondInputField"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                style="@style/inputTextToConvert" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:elevation="8dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonPreviousConverter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_previous_page"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonPrevious"
                android:layout_margin="12dp" />

            <ImageButton
                android:id="@+id/buttonReset"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_clear"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonReset"
                android:layout_margin="12dp" />

            <ImageButton
                android:id="@+id/buttonNextConverter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_next_page"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonNext"
                android:layout_margin="12dp" />
        </LinearLayout>

    <ImageButton
        android:id="@+id/backToMenu"
        style="@style/buttonStyleOperator"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/buttonPrevious"
        android:text="@string/buttonPrevious" />

</LinearLayout>