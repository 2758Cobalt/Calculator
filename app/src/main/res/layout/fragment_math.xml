<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/backToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_32"
            android:contentDescription="@string/buttonPrevious"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/labelMathCalculator"
            style="@style/displayTextConvert"
            android:layout_width="wrap_content"
            android:text="@string/label_algebraCalculator"
            android:textColor="@color/gray120"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="24dp"
        android:layout_margin="8dp"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calculatorPreview"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/body_cube"/>

            <TextView
                android:id="@+id/descMathCalculator"
                style="@style/tooltipTextStyle"
                android:text="@string/tooltip_parallelepipedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/gray75_box"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:text="@string/text_In" />

        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonPreviousMath"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_subdirectory_arrow_left_32"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonPrevious"
                android:layout_margin="12dp" />
            <ImageButton
                android:id="@+id/buttonResetMath"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_playlist_remove_24"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonReset"
                android:layout_margin="12dp" />

            <ImageButton
                android:id="@+id/buttonNextMath"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_right_alt_32"
                android:background="@drawable/linearlayout_bg_sheet"
                android:backgroundTint="@color/orange"
                android:contentDescription="@string/buttonNext"
                android:layout_margin="12dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>