<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

        <Button
            android:id="@+id/result_tooltipBtn"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@drawable/white_round_corner_box"
            android:elevation="2dp"
            android:textColor="@color/black"
            android:text="@string/symbol_totalArea" />

        <TextView
            android:id="@+id/resultTextMath"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:textAlignment="textStart"
            style="@style/displayTextMath"
            android:hint="@string/sampleText"/>

</LinearLayout>