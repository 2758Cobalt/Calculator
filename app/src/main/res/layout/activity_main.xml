<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            style="@style/buttonFunc"
            android:id="@+id/quitBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="quitApp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/buttonExit"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            tools:ignore="InefficientWeight,NestedWeights" />

        <Button
            android:id="@+id/toConvertersBtn"
            style="@style/buttonFunc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="switchToConverters"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/text_Selector"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            tools:ignore="InefficientWeight,NestedWeights" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/resultField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:autoSizeMaxTextSize="12sp"
                android:text="0"
                android:textStyle="bold"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textSize="42sp" />


            <TextView
                android:id="@+id/historyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textSize="24sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--AC = % /-->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                style="@style/buttonFunc"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:id="@+id/acBtn"
                android:onClick="clearAll"
                android:text="@string/symbolAC" />
            <Button
                style="@style/buttonFunc"
                android:id="@+id/roundBtn"
                android:onClick="roundResult"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolRound" />
            <Button
                style="@style/buttonFunc"
                android:id="@+id/buttonPercent"
                android:onClick="percentResult"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolPercent" />
            <Button
                style="@style/buttonOperator"
                android:onClick="operationEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolDiv" />
        </androidx.gridlayout.widget.GridLayout>

        <!--789-->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="7" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="8" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="9" />
            <Button
                style="@style/buttonOperator"
                android:onClick="operationEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolMul" />
        </androidx.gridlayout.widget.GridLayout>

        <!--456-->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="4" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="5" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="6" />
            <Button
                style="@style/buttonOperator"
                android:onClick="operationEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolAdd" />

        </androidx.gridlayout.widget.GridLayout>

        <!--123-->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="1" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="2" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="3" />
            <Button
                style="@style/buttonOperator"
                android:onClick="operationEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolSub" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                style="@style/buttonFunc"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolExponent" />
            <Button
                style="@style/buttonNumber"
                android:onClick="numberEnter"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="0" />
            <Button
                style="@style/buttonFunc"
                android:onClick="enterPoint"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolPoint" />
            <Button
                style="@style/buttonOperator"
                android:onClick="equalAction"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:text="@string/symbolEqual" />


        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>


</LinearLayout>