<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quitBtn"
            style="@style/buttonFunc"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"

            android:onClick="quitApp"
            android:textSize="24sp"
            android:text="Exit"
            tools:ignore="InefficientWeight,NestedWeights" />
        <Button
            android:id="@+id/convertBtn"
            style="@style/buttonOperator"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:onClick="convertAction"
            android:textSize="24sp"
            android:text="C"
            tools:ignore="InefficientWeight,NestedWeights" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="fill_horizontal|top|fill_vertical"
        android:layout_weight="0"
        android:padding="8dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rowCount="5">


        <Button
            style="@style/buttonFunc"
            android:onClick="clearAll"
            android:text="AC"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal" />


        <Button
            style="@style/buttonOperator"
            android:onClick="operationAction"
            android:text="รท" />


        <Button
            style="@style/buttonOperator"
            android:onClick="operationAction"
            android:text="x" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="7" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="8" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="9" />

        <Button
            style="@style/buttonOperator"
            android:onClick="operationAction"
            android:text="-" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="4" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="5" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="6" />

        <Button
            style="@style/buttonOperator"
            android:onClick="operationAction"
            android:text="+" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="1" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="2" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="3" />

        <Button
            android:id="@+id/equalBtn"
            style="@style/buttonOperator"
            android:onClick="equalAction"
            android:text="="
            app:layout_gravity="fill_vertical"
            app:layout_rowSpan="2" />

        <Button
            style="@style/buttonNumber"
            android:onClick="numAction"
            android:text="0"
            android:textAlignment="textStart"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal" />

        <Button
            style="@style/buttonFunc"
            android:onClick="operationAction"
            android:text="," />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>