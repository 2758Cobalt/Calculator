<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_weight="0"
        android:padding="4dp"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
            android:background="@drawable/bottom_nav_bar"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/bottom_nav_colors"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/only_calculator" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToWeight"
            android:text="@string/buttonConverterWeight" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToLength"
            android:text="@string/buttonConverterLength" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToSpeed"
            android:text="@string/buttonConverterSpeed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToData"
            android:text="@string/buttonConverterData" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToTemperature"
            android:text="@string/buttonConverterTemperature" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToSquare"
            android:text="@string/buttonConverterSquare" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/linearlayout_bg_sheet"
        android:text="@string/text_labelMath"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaParallelepiped"
            android:text="@string/text_labelParallelepiped" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaTriangle"
            android:text="@string/text_labelTriangleDefault"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaRhombus"
            android:textSize="18sp"
            android:text="@string/text_labelRhombus" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaCircle"
            android:textSize="18sp"
            android:text="@string/text_labelCircle"/>
        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaTrapezoid"
            android:textSize="18sp"
            android:text="@string/text_labelTrapezoid"/>
    </LinearLayout>



</LinearLayout>