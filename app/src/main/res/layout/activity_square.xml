<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".LengthActivity">

    <Button
        style="@style/buttonActionOperator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/text_Selector"
        android:textStyle="bold"
        android:textSize="22sp"
        android:onClick="switchToSelector" />

    <LinearLayout
        android:background="@drawable/linearlayout_bg_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="12dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/displayTextConvert"
            android:textStyle="bold"
            android:text="@string/buttonConverterSquare" />
        <TextView
            style="@style/tooltipTextStyle"
            android:text="@string/tooltip_squareText"
             />

        <Spinner
            android:id="@+id/dropDownFrom"
            style="@style/spinnerConvert" />

        <EditText
            android:id="@+id/inputValue"
            style="@style/inputTextToConvert"
            android:layout_margin="16dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="@string/text_In" />

        <Spinner
            android:id="@+id/dropDownIn"
            style="@style/spinnerConvert" />

        <TextView
            android:id="@+id/resultConvertation"
            style="@style/displayTextConvert"
            android:text="@string/text_labelTrapezoid"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <Button
                style="@style/buttonAction"
                android:layout_width="match_parent"
                android:onClick="resetFields"
                android:text="@string/buttonReset" />

            <Button
                style="@style/buttonActionOperator"
                android:layout_width="match_parent"
                android:onClick="calculateConvertation"
                android:text="@string/buttonConvert" />
        </LinearLayout>

    </LinearLayout>







</LinearLayout>