<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.MainActivity" >

    <!--Текстовые поля-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linearlayout_bg_sheet"
            android:backgroundTint="#F0F0F0"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:hint="@string/tooltip_enterText"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray75"
                    android:textSize="42sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/historyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="2"
                android:text="0"
                android:textColor="@color/gray150"
                android:textColorHint="@color/gray120"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memoryField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/gray150"
                android:textColorHint="@color/gray120"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/buttonHistory"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:contentDescription="@string/sampleText"
            android:src="@drawable/baseline_history_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/buttonOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:contentDescription="@string/sampleText"
            android:src="@drawable/baseline_settings_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Quick Access Toolbar"
        android:textAlignment="center"
        android:textColor="@color/white200"
        app:layout_constraintBottom_toTopOf="@+id/quickToolbar"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout" />

    <HorizontalScrollView
        android:id="@+id/quickToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/linearlayout_bg_sheet"
        android:backgroundTint="@color/white240"
        app:layout_constraintBottom_toTopOf="@+id/numpadLayout"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout">

        <LinearLayout
            android:id="@+id/quickToolBarContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMemoryClear"
                style="@style/buttonStyleDefault"
                android:text="MC" />

            <Button
                android:id="@+id/buttonMemoryRead"
                style="@style/buttonStyleDefault"
                android:text="MR" />

            <Button
                android:id="@+id/buttonMemoryAdd"
                style="@style/buttonStyleDefault"
                android:text="MS" />

            <Button
                android:id="@+id/buttonMemoryResultAdd"
                style="@style/buttonStyleDefault"
                android:text="M+" />

            <Button
                android:id="@+id/buttonMemoryResultSub"
                style="@style/buttonStyleDefault"
                android:text="M-" />

            <Button
                android:id="@+id/buttonMemoryResultMul"
                style="@style/buttonStyleDefault"
                android:text="M*" />

            <Button
                android:id="@+id/buttonMemoryResultDiv"
                style="@style/buttonStyleDefault"
                android:text="M/" />

            <Button
                android:id="@+id/buttonInvertNumber"
                style="@style/buttonStyleDefault"
                android:text="+/-" />
            <Button
                android:id="@+id/buttonPowerNumber"
                style="@style/buttonStyleDefault"
                android:text="Х²" />

        </LinearLayout>

    </HorizontalScrollView>

    <!--Numpad-->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/numpadLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        app:columnCount="4"
        app:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonRoundBracketOpen"
            style="@style/buttonStyleOperator"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            android:text="(" />

        <Button
            android:id="@+id/buttonRoundBracketClose"
            style="@style/buttonStyleOperator"
            app:layout_columnWeight="1"
            app:layout_columnSpan="2"
            android:text=")" />

        <Button
            android:id="@+id/buttonClearAllAction"
            style="@style/buttonStyleDefault"
            android:text="@string/symbolAC" />

        <Button
            android:id="@+id/buttonRoundAction"
            style="@style/buttonStyleDefault"
            android:text="@string/symbolRound" />

        <Button
            android:id="@+id/buttonPercentAction"
            style="@style/buttonStyleDefault"
            android:text="@string/symbolPercent" />

        <Button
            android:id="@+id/divBtn"
            style="@style/buttonStyleOperator"
            android:text="@string/symbolDiv" />

        <!--789-->
        <Button
            android:id="@+id/num7"
            style="@style/buttonStyleNumber"
            android:backgroundTint="@color/gray150"
            android:text="7" />

        <Button
            android:id="@+id/num8"
            style="@style/buttonStyleNumber"
            android:text="8" />

        <Button
            android:id="@+id/num9"
            style="@style/buttonStyleNumber"
            android:text="9" />

        <Button
            android:id="@+id/mulBtn"
            style="@style/buttonStyleOperator"
            android:text="@string/symbolMul" />

        <!--456-->
        <Button
            android:id="@+id/num4"
            style="@style/buttonStyleNumber"
            android:text="4" />

        <Button
            android:id="@+id/num5"
            style="@style/buttonStyleNumber"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            style="@style/buttonStyleNumber"
            android:text="6" />

        <Button
            android:id="@+id/addBtn"
            style="@style/buttonStyleOperator"
            android:text="@string/symbolAdd" />

        <!--123-->
        <Button
            android:id="@+id/num1"
            style="@style/buttonStyleNumber"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            style="@style/buttonStyleNumber"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            style="@style/buttonStyleNumber"
            android:text="3" />

        <Button
            android:id="@+id/subBtn"
            style="@style/buttonStyleOperator"
            android:text="@string/symbolSub" />

        <Button
            android:id="@+id/buttonBackSpaceAction"
            style="@style/buttonStyleDefault"
            android:text="\u232b" />

        <Button
            android:id="@+id/num0"
            style="@style/buttonStyleNumber"
            android:text="0" />

        <Button
            android:id="@+id/buttonPointAction"
            style="@style/buttonStyleDefault"
            android:text="@string/symbolPoint" />

        <Button
            android:id="@+id/buttonEqualAction"
            style="@style/buttonStyleOperator"
            android:text="@string/symbolEqual" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>