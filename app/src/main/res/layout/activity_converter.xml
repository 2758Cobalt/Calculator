<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            style="@style/buttonAction"
            android:layout_height="48dp"
            android:onClick="switchToMain"
            android:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToWeight"
            android:text="@string/buttonConverterWeight" />

        <Button
            style="@style/buttonTile"
            android:text="@string/buttonConverterLength" />

        <Button
            style="@style/buttonTile"
            android:text="@string/buttonConverterSpeed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:text="@string/buttonConverterData" />

        <Button
            style="@style/buttonTile"
            android:text="@string/buttonConverterTemperature" />

        <Button
            style="@style/buttonTile"
            android:text="@string/buttonConverterSquare" />


    </LinearLayout>

</LinearLayout>