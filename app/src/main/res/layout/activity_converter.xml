<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray30"
    android:padding="4dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:padding="4dp"
        android:orientation="horizontal">

        <Button
            style="@style/buttonActionOperator"
            android:layout_height="48dp"
            android:onClick="switchToMain"
            android:text="@string/buttonPrevious" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToWeight"
            android:text="@string/buttonConverterWeight" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToLength"
            android:text="@string/buttonConverterLength" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToSpeed"
            android:text="@string/buttonConverterSpeed" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToData"
            android:text="@string/buttonConverterData" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToTemperature"
            android:text="@string/buttonConverterTemperature" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToSquare"
            android:text="@string/buttonConverterSquare" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/linearlayout_bg_sheet"
        android:text="Math"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaParallelepiped"
            android:text="@string/text_labelParallelepiped" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaTriangle"
            android:text="@string/text_labelTriangleDefault"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaParallelepiped"
            android:textSize="14sp"
            android:text="@string/text_labelParallelepiped" />

        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaRhombus"
            android:textSize="14sp"
            android:text="@string/text_labelRhombus"/>
        <Button
            style="@style/buttonTile"
            android:onClick="switchToAreaCircle"
            android:textSize="14sp"
            android:text="@string/text_labelCircle"/>
    </LinearLayout>



</LinearLayout>