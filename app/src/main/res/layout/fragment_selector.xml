<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/linearlayout_bg_sheet"
        android:backgroundTint="#EFEFEF"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp"
        android:text="@string/text_labelQuantities"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:columnCount="3"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/buttonWeight"
            style="@style/buttonTile"
            android:src="@drawable/constaint_weight"
            android:contentDescription="@string/buttonConverterWeight"
            android:text="@string/buttonConverterWeight" />

        <ImageButton
            android:id="@+id/buttonLength"
            style="@style/buttonTile"
            android:src="@drawable/constaint_length"
            android:contentDescription="@string/buttonConverterLength"
            android:text="@string/buttonConverterLength" />

        <ImageButton
            android:id="@+id/buttonSpeed"
            style="@style/buttonTile"
            android:src="@drawable/constaint_speed"
            android:contentDescription="@string/buttonConverterSpeed"
            android:text="@string/buttonConverterSpeed" />

        <ImageButton
            android:id="@+id/buttonData"
            style="@style/buttonTile"
            android:src="@drawable/constaint_data"
            android:contentDescription="@string/buttonConverterData"
            android:text="@string/buttonConverterData" />

        <ImageButton
            android:id="@+id/buttonTemperature"
            style="@style/buttonTile"
            android:src="@drawable/constaint_temperature"
            android:contentDescription="@string/buttonConverterTemperature"
            android:text="@string/buttonConverterTemperature" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:columnCount="3"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/buttonSquare"
            style="@style/buttonTile"
            android:src="@drawable/area_square"
            android:contentDescription="@string/buttonConverterSquare"
            android:text="@string/buttonConverterSquare" />

        <ImageButton
            android:id="@+id/buttonParallelepiped"
            style="@style/buttonTile"
            android:src="@drawable/area_rectangle"
            android:contentDescription="@string/tooltip_parallelepipedText"
            android:text="@string/text_labelParallelepiped" />

        <ImageButton
            android:id="@+id/buttonRhombus"
            style="@style/buttonTile"
            android:src="@drawable/area_rhombus"
            android:contentDescription="@string/tooltip_rhombusText"
            android:text="@string/text_labelRhombus" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:columnCount="3"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/buttonTriangle"
            style="@style/buttonTile"
            android:src="@drawable/area_triangle"
            android:contentDescription="@string/tooltip_triangleText"
            android:text="@string/text_labelTriangleDefault"/>
        <ImageButton
            android:id="@+id/buttonIsoscelesTriangle"
            style="@style/buttonTile"
            android:src="@drawable/area_triangle"
            android:contentDescription="@string/tooltip_triangleText"
            android:text="@string/text_labelTriangleDefault"/>
        <ImageButton
            android:id="@+id/buttonEquilateralTriangle"
            style="@style/buttonTile"
            android:src="@drawable/area_triangle"
            android:contentDescription="@string/tooltip_triangleText"
            android:text="@string/text_labelTriangleDefault"/>

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:columnCount="3"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/buttonCircle"
            style="@style/buttonTile"
            android:src="@drawable/area_circle"
            android:contentDescription="@string/tooltip_circleText"
            android:text="@string/text_labelCircle"/>

        <ImageButton
            android:id="@+id/buttonLengthCircle"
            style="@style/buttonTile"
            android:src="@drawable/area_circle"
            android:contentDescription="@string/tooltip_circleText"
            android:text="@string/text_labelCircle"/>

        <ImageButton
            android:id="@+id/buttonTrapezoid"
            style="@style/buttonTile"
            android:src="@drawable/area_trapezium"
            android:contentDescription="@string/tooltip_trapezoidText"
            android:text="@string/text_labelTrapezoid"/>

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>