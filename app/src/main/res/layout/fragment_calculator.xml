<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CalculatorFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg_sheet"
            android:backgroundTint="#EFEFEF"
            android:gravity="bottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/operatorField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="bottom|start"
                    android:shadowColor="@color/orange"
                    android:shadowRadius="6"
                    android:textColor="@color/gray150"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resultField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:gravity="bottom|end"
                    android:hint="0"
                    android:maxLines="1"
                    android:shadowColor="@color/orange"
                    android:shadowRadius="3"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray75"
                    android:textSize="42sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/historyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="end"
                android:hint="0"
                android:maxLines="2"
                android:textColorHint="@color/gray120"
                android:textSize="24sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="64dp"
            android:layout_height="12dp"
            android:layout_marginVertical="12dp"
            android:backgroundTint="#E1E1E1"
            android:contentDescription="upper_trigger"
            android:clickable="false"
            android:layout_gravity="center_horizontal"/>

        <!--AC = % /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/ButtonClearAll"
                style="@style/buttonStyleFunctional"
                android:text="@string/symbolAC" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/buttonRound"
                style="@style/buttonStyleFunctional"
                android:text="@string/symbolRound" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/buttonSingleClear"
                style="@style/buttonStyleFunctional"
                android:text="\u232b" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/divBtn"
                style="@style/buttonStyleOperator"
                android:text="@string/symbolDiv" />
        </LinearLayout>

        <!--789-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num7"
                style="@style/buttonStyleNumber"
                android:text="7" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num8"
                style="@style/buttonStyleNumber"
                android:text="8" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num9"
                style="@style/buttonStyleNumber"
                android:text="9" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/mulBtn"
                style="@style/buttonStyleOperator"
                app:layout_rowWeight="1"
                android:text="@string/symbolMul" />
        </LinearLayout>

        <!--456-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num4"
                style="@style/buttonStyleNumber"
                android:text="4" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num5"
                style="@style/buttonStyleNumber"
                android:text="5" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num6"
                style="@style/buttonStyleNumber"
                android:text="6" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/addBtn"
                style="@style/buttonStyleOperator"
                android:text="@string/symbolAdd" />
        </LinearLayout>

        <!--123-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:orientation="horizontal">
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num1"
                style="@style/buttonStyleNumber"
                android:text="1" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num2"
                style="@style/buttonStyleNumber"
                android:text="2" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num3"
                style="@style/buttonStyleNumber"
                android:text="3" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/subBtn"
                style="@style/buttonStyleOperator"
                android:text="@string/symbolSub" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:orientation="horizontal">
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/buttonPercent"
                style="@style/buttonStyleFunctional"
                android:text="@string/symbolPercent" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/num0"
                style="@style/buttonStyleNumber"
                android:text="0" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/buttonPoint"
                style="@style/buttonStyleFunctional"
                android:text="@string/symbolPoint" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/buttonResult"
                style="@style/buttonStyleOperator"
                android:text="@string/symbolEqual" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>